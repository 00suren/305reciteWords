<view class="container">
  <view class="userinfo">
    <view > 
      <!-- <open-data type="userAvatarUrl"></open-data> -->
      <label>
      <image class="userinfo-avatar" src="{{avatarUrl||'http://b.yzcdn.cn/showcase/membercenter/2018/08/06/default_avatar@2x.png'}}"></image>
        <button open-type="getUserInfo" bindgetuserinfo="onGetUserInfo"></button>
      </label>
      
    </view>
     <text class="userinfo-nickname">{{nickname||"点击头像登录"}}</text>
  </view>
  <view class="list-container">
  <view class="list-item" bindtap="showMyNote">
    <text class="list-name">我的笔记</text>
    <image class="list-icon" src="/images/chevron.png"></image>
  </view> 
  <view >
    <text class="list-name"></text>
   
  </view> 
  <view class="list-item" bindtap="showClause">
    <text class="list-name">使用说明</text>
    <image class="list-icon" src="/images/chevron.png"></image>
  </view>
  <view class="list-item" bindtap="showHelp">
    <text class="list-name">关于作者</text>
    <image class="list-icon" src="/images/chevron.png"></image>
  </view>
  <view class="list-item" bindtap="showFeedback">
    <text class="list-name">用户反馈</text>
    <image class="list-icon" src="/images/chevron.png"></image>
  </view>
  </view>
</view>